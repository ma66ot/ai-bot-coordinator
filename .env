# ClawBot Coordinator Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=ClawBot Coordinator
ENVIRONMENT=development
DEBUG=true

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://clawbot:clawbot@localhost:5432/clawbot_coordinator
POSTGRES_USER=clawbot
POSTGRES_PASSWORD=clawbot
POSTGRES_DB=clawbot_coordinator

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Worker Configuration
TIMEOUT_CHECK_INTERVAL=30

# Security (Production only)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
